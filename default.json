{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  
  "labels": ["dependencies", "renovate"],
  "automerge": false,
  "automergeType": "pr",
  "platformAutomerge": true,
  "stabilityDays": 14,

  "timezone": "Europe/London",
  "dependencyDashboard": false,
  "includeForks": false,

  "onboardingBranch": "GS-Renovate-Setup",
  "onboardingPrTitle": "GS-Renovate (Initial Set-up)",
  "branchPrefix": "Sentinel-Renovate-",
  "commitMessagePrefix": "Sentinel-Renovate: ",
  "commitMessageAction": "Update",
  "prFooter": "Automatic dependency bump created by Sentinel-Renovate.",

  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "prNotPendingHours": 1,
  "prCreation": "immediate",
  
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "rebaseWhen": "behind-base-branch",

  "assignees": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/target/**",
    "**/docker/**"
  ],

  "docker": {
    "enabled": true
  },

  "packageRules": [
    {
      "groupName": "Maven Dependencies - Minor/Patch Updates",
      "matchManagers": ["maven"],
      "matchPackagePatterns": ["*"],
      "description": "Automerge minor and patch updates for Maven dependencies.",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "labels": ["Maven", "minor", "patch"]
    },
    {
      "groupName": "npm Dependencies - All Updates",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["*"],
      "description": "Automerge all updates (major, minor, and patch) for npm dependencies.",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true,
      "labels": ["npm", "all"]
    },
    {
      "groupName": "NuGet Dependencies - Minor/Patch Updates",
      "matchManagers": ["nuget"],
      "matchPackagePatterns": ["*"],
      "description": "Automerge minor and patch updates for NuGet dependencies.",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "labels": ["NuGet", "minor", "patch"]
    },
    {
      "groupName": "Dockerfile Dependencies - Minor/Patch Updates",
      "matchManagers": ["dockerfile"],
      "matchPackagePatterns": ["*"],
      "description": "Automerge minor and patch updates for Dockerfile dependencies.",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "labels": ["Docker", "minor", "patch"]
    },
    {
      "groupName": "Major Dependency Update",
      "matchUpdateTypes": ["major"],
      "description": "Do not automerge major updates. Manual review is required for all dependencies except npm.",
      "automerge": false,
      "labels": ["major"],
      "excludePackagePatterns": ["npm"]
    }
  ]
}
